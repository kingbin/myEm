
<div class="page-header">
  <h2 ><img {{bindAttr src="gravatar"}} />   {{fullName}}   <small>born on date: {{prettyDate dob}}</small></h2>
  <hr>
  <div class="below-the-fold">
    First Name: {{firstName}}<br/>
    Last Name: {{lastName}}<br/>
    DOB: {{prettyDate dob}}<br/>
    Age: {{fromToday dob}}<br/>
    email: {{email}}<br/>

    notes: {{md notes}}<br/>

    {{#if isEditing}}
      {{partial 'insured/edit'}}
      <button {{action 'doneEditing'}}>done</button>
    {{else}}
      <button {{action 'edit'}}>edit</button>
    {{/if}}
  </div>
</div>
